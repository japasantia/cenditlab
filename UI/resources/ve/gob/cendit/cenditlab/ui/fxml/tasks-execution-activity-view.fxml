<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import ve.gob.cendit.cenditlab.ui.*?>

<fx:root type="SplitPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" orientation="VERTICAL" dividerPositions="0.7" maxWidth="Infinity" maxHeight="Infinity">
<!-- <SplitPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" orientation="VERTICAL" dividerPositions="0.7" maxWidth="Infinity" maxHeight="Infinity" > -->
   <items>

        <SplitPane dividerPositions="0.3" maxWidth="Infinity" maxHeight="Infinity" >

            <HeaderFrameView fx:id="tasksContainerView" text="Selected Tasks" maxWidth="Infinity" maxHeight="Infinity">
                <icon>
                    <Image url="@../images/multimeter.png" />
                </icon>
                <content>
                    <VBox>
                        <ToolboxListView fx:id="tasksToolboxListView"/>
                        <ExecutionToolbar fx:id="mainExecutionToolbar" />
                    </VBox>
                </content>
            </HeaderFrameView>

            <HeaderFrameView fx:id="resultsContainerView" text="Results" maxWidth="Infinity" maxHeight="Infinity">
                <icon>
                    <Image url="@../images/multimeter.png" />
                </icon>
                <content>
                    <VBox fx:id="resultsVBox"/>
                </content>
            </HeaderFrameView>

        </SplitPane>

        <HeaderFrameView fx:id="outputContainerView" text="Output" maxWidth="Infinity" maxHeight="Infinity">
            <icon>
                <Image url="@../images/multimeter.png" />
            </icon>
            <content>
                <VBox fx:id="outputVBox"/>
            </content>
        </HeaderFrameView>

   </items>

<!-- </SplitPane> -->
</fx:root>
